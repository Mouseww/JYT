<script>
    var contentPath = '@Url.Content("~")'.substr(0, '@Url.Content("~")'.length - 1);
    var isIE = !!window.ActiveXObject;
    var isIE6 = isIE && !window.XMLHttpRequest;
    if (isIE6) {
        window.location.href = contentPath + "/Error/ErrorBrowser";
    }
    //官网体验
    var gwDargerHeight = 64;
    $(function () {
        gwDargerHeight = $('.gwDarger').height() - 1;
        $('.gwDarger').css('top', '-' + gwDargerHeight + 'px');
        $('.gwTipBtn').on('click', function () {
            var $this = $(this);
            if ($this.hasClass('open')) {
                $('.gwDarger').animate({
                    "top": ('-' + gwDargerHeight + 'px')
                }, 300);
                $this.animate({
                    "top": "0px"
                }, 300);
                $this.find('span').text('体验说明');
                $this.removeClass('open');
            }
            else {
                $('.gwDarger').animate({
                    "top": "0px"
                }, 300);
                $this.animate({
                    "top": (gwDargerHeight + 'px')
                }, 300);
                $this.find('span').text('关闭说明');
                $this.addClass('open');
            }
        });
        $(window).resize(function (e) {
            window.setTimeout(function () {
                gwDargerHeight = $('.gwDarger').height() - 1;
                var $gwTipBtn = $('.gwTipBtn');
                if ($gwTipBtn.hasClass('open')) {
                    $gwTipBtn.css('top', gwDargerHeight + 'px');
                } else {
                    $('.gwDarger').css('top', '-' + gwDargerHeight + 'px');
                }
            }, 200);
            e.stopPropagation();
        });
        //第一次登陆弹出体验说明
        var isLooked = top.$.cookie('learn_loginlook');
        if (isLooked != "1") {
            top.$.cookie('learn_loginlook', "1", { path: "/", expires: 7 });
            $('.gwTipBtn').trigger('click');
        }
       
        $(".menu .item").hover(function () {
            $(this).find('.popover').show();
        }, function () {
            $(this).find('.popover').hide();
        });
    });
</script>